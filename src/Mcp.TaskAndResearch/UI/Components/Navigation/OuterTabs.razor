<MudTabs Elevation="2" 
        Rounded="true" 
        ApplyEffectsToContainer="true" 
        PanelClass="pa-4"
        @bind-ActivePanelIndex="_activeIndex">
    <MudTabPanel Text="Tasks" Icon="@Icons.Material.Filled.Task" BadgeData="@TaskCount" BadgeColor="Color.Primary">
        @if (ChildContent is not null && _activeIndex == 0)
        {
            @ChildContent
        }
        else
        {
            <TasksPage />
        }
    </MudTabPanel>
    <MudTabPanel Text="History" Icon="@Icons.Material.Filled.History">
        @if (_activeIndex == 1)
        {
            <MudText>History view coming soon...</MudText>
        }
    </MudTabPanel>
<MudTabPanel Text="Templates" Icon="@Icons.Material.Filled.Description">
        @if (_activeIndex == 2)
        {
            <MudText>Templates view coming soon...</MudText>
        }
    </MudTabPanel>
    <MudTabPanel Text="Settings" Icon="@Icons.Material.Filled.Settings">
        @if (_activeIndex == 3)
        {
            <MudText>Settings view coming soon...</MudText>
        }
    </MudTabPanel>
</MudTabs>
